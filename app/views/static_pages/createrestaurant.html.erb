        var x = parseFloat(ui.offset.left - $(this).offset().left);
        var y = parseFloat(ui.offset.top - $(this).offset().top);

        $.ajax({
          type:"POST",
          url:"/tables/create",
          data: {num_seats: 5, restaurant_id: 1, x_loc: x, y_loc: y, available: true},
          datatype: 'script',
          complete:function(){},

          error:function(){alert("Did not save table location")}


        })


      }
    });
    $( "#set div" ).draggable({ stack: "#set div"});
  });

